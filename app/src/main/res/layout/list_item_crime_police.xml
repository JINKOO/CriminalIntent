<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <TextView
        android:id="@+id/crime_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crime Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/crime_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crime Date"
        app:layout_constraintTop_toBottomOf="@+id/crime_title"
        app:layout_constraintStart_toStartOf="@+id/crime_title"/>

    <Button
        android:id="@+id/call_police_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/require_police"
        app:layout_constraintTop_toTopOf="@+id/crime_title"
        app:layout_constraintBottom_toBottomOf="@+id/crime_date"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>